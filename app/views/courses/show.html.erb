<div class="page-header">
  <h1>Course #<%= @course.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Title</dt>
  <dd><%= @course.title %></dd>

  <dt>Dept</dt>
  <dd><%= @course.dept %></dd>

  <dt>Number</dt>
  <dd><%= @course.number %></dd>

</dl>

<h3>All the meetings for this section:</h3>

<ul>

<%= meetings = Meeting.where(:course_id => @course.id) %>
<%= meetings.each do |meeting| %>
	<li><%= meeting.held_on  %>%</li>
<% end %>
</ul>
